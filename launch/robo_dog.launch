<launch>	
  <arg name="debug" default="false"/>
  <arg if="$(arg debug)" name="launch_prefix" value="xterm -rv -e gdb -ex run -args"/>
  <arg unless="$(arg debug)" name="launch_prefix" value=""/>
  
  <node pkg="openni_camera" type="openni_node" name="openni_node1" output="screen" launch-prefix="$(arg launch_prefix)">
    <param name="device_id" value="#1"/>
    <rosparam command="load" file="$(find openni_camera)/info/openni_params.yaml" />
    <param name="rgb_frame_id" value="/openni_rgb_optical_frame" />
    <param name="depth_frame_id" value="/openni_depth_optical_frame" />
    <param name="use_indices" value="false" />
    <param name="depth_registration" value="true" />
    <param name="image_mode" value="2" />
    <param name="depth_mode" value="2" />
    <param name="debayering" value="2" />
    <param name="depth_time_offset" value="0" />
    <param name="image_time_offset" value="0" />
  </node>
  <include file="$(find openni_camera)/launch/kinect_frames.launch"/>
  

  <node pkg="robo_dog" name="BallTracker" type="BallTracker" output="screen" />
  <node pkg="robo_dog" name="GetZ" type="GetZ" output="screen">
    <remap from="~/xy" to="/BallTracker/ballinfo" />
    <remap from="~/depth" to="/camera/depth/image" />
  </node>
  <node pkg="robo_dog" name="FilterRGBD" type="FilterRGBD" output="screen">
    <remap from="~/in" to="/camera/rgb/points" />
  </node>
</launch>

